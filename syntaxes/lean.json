          "name": "keyword.other.lean"
        },
        {
          "begin": "\\(", "end": "\\)",
          "comment": "Type annotations",
          "name": "meta.parens",
          "patterns" : [
            { "begin": ":", "end": "(?=\\))",
              "beginCaptures": {"0": {"name": "punctuation.separator.type.lean"}},
              "contentName": "meta.type.lean",
              "patterns" : [
                {"include": "#expressions"}
              ]
